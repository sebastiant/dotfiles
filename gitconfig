[user]
	name = Sebastian Tunstig
	email = sebastian.tunstig@gmail.com
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
	keepBackup = false
[mergetool "diffmerge"]
	cmd = diffmerge --merge\n--result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
[mergetool]
	keepBackup = false
	trustExitCode = true
[core]
	editor = $(which vim)
	excludesfile = ~/.gitignore_global
[branch "master"]
	remote = origin
	merge = refs/heads/master
[difftool]
	prompt = false
	trustExitCode = true
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	st = status -s
	s = status
	a = !git add . && git status
	ci = commit
	co = checkout
	d = difftool
	ds = diff --staged
	master = checkout master
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
